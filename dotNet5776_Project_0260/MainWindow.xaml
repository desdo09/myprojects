<Window x:Class="dotNet5776_Project_0260.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNet5776_Project_0260"
        mc:Ignorable="d"
       
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel  >
            <Menu BorderBrush="Black" BorderThickness="0,0,0,1"   >
                <MenuItem Header="File" >
                    <MenuItem Header="New" Click="MenuItem_Click" />
                    <MenuItem Header="Open" Click="MenuItem_Click_1" />
                    <MenuItem Header="Save" />
                    <MenuItem Header="Save As">
                        <MenuItem Header="Save as BMP" />
                        <MenuItem Header="Save as JPG" />
                        <MenuItem Header="Save as GIF" />
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="Edit" >
                    <MenuItem Header="Branch" Click="MenuItem_Click" />
                    <MenuItem Header="Clients" Click="MenuItem_Click_1" />
                    <MenuItem Header="Dish" />
                </MenuItem>
                <MenuItem Header="Format" />
            </Menu>
        </StackPanel>

        <Grid HorizontalAlignment="Stretch"  Grid.Row="1" VerticalAlignment="Stretch" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>
            <Border BorderBrush="#FF130B0B" BorderThickness="0,0,2,0">
                <Grid Grid.Column="0" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
            </Border>
            <Grid x:Name="ContentDataGrid" Grid.Column="1" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <DataGrid x:Name="dataGrid" TextBlock.TextAlignment="Center" Grid.Column="1" Grid.Row="1" AutoGenerateColumns="True"  AutoGeneratingColumn="dataGrid_AutoGeneratingColumn" Margin="0,0,0,0" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" >
                </DataGrid>
                <Grid x:Name="SearchGrid" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="401*"/>
                        <ColumnDefinition Width="247*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="label" Margin="0,10,0,10" Grid.Column="0" Content="Search" HorizontalAlignment="Right" />

                    <TextBox x:Name="textBox" VerticalAlignment="Center"  Grid.Column="1" Margin="0,13" TextChanged="textBox_TextChanged" BorderThickness="2" Grid.ColumnSpan="2" />

                </Grid>
                <Grid x:Name="ButtonsGrid" Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>

                    </Grid.ColumnDefinitions>
                    <Button x:Name="Add_button" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}"  >
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Images/addButton.fw.png"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch"   Width="{Binding ActualWidth, ElementName=Add_button}"   />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button x:Name="Update_button" Grid.Column="1" VerticalAlignment="Center" Foreground="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}"   >
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Images/UpdateButton.fw.png" VerticalAlignment="Center" HorizontalAlignment="Center"  Width="{Binding ActualWidth, ElementName=Update_button}" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button x:Name="Remove_button" Grid.Column="2" VerticalAlignment="Center" Foreground="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}"   >
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Images/RemoveButton.fw.png" VerticalAlignment="Center" HorizontalAlignment="Center"   Width="{Binding ActualWidth, ElementName=Remove_button}"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button x:Name="Export_button" Grid.Column="3" VerticalAlignment="Center" Foreground="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}"   >
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Images/ExportButton.fw - copia.png" VerticalAlignment="Center" HorizontalAlignment="Center"  Width="{Binding ActualWidth, ElementName=Export_button}" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button x:Name="Print_button" Grid.Column="4" VerticalAlignment="Center" Foreground="{x:Null}" BorderBrush="{x:Null}" Background="{x:Null}"   >
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="Images/PrintButton.png" VerticalAlignment="Center" HorizontalAlignment="Center"  Width="{Binding ActualWidth, ElementName=Print_button}" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </Grid>


            </Grid>
        </Grid>

    </Grid>
</Window>
